@model EduquizSuper.Models.Subject
@{
    ViewData["Title"] = "Xóa môn học";
}

<h1>Xóa môn học</h1>

<div class="alert alert-danger">
    <h3>Bạn có chắc chắn muốn xóa môn học này?</h3>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectId
        </dd>
        <dt class="col-sm-2">
            Tên môn học
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectName
        </dd>
        <dt class="col-sm-2">
            Khóa học
        </dt>
        <dd class="col-sm-10">
            @Model.Course?.CourseName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>