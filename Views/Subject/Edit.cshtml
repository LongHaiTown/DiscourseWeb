@model EduquizSuper.Models.Subject
@{
    ViewData["Title"] = "Sửa môn học";
}

<h1>Sửa môn học</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SubjectId" />
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="SubjectName" class="control-label">Tên môn học</label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label">Khóa học</label>
        <select asp-for="CourseId" class="form-control" asp-items="@(ViewData["CourseId"] as SelectList)">
            <option value="">Chọn khóa học</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}