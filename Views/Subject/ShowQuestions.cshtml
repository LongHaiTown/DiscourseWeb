@model PaginatedList<EduquizSuper.Models.Question>
@{
    ViewData["Title"] = "Danh sách câu hỏi môn " + ViewData["SubjectName"];
    var subjectId = ViewData["SubjectId"] as string;
}

<h1>Danh sách câu hỏi môn @ViewData["SubjectName"]</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
{
    <p>
        <a asp-controller="Question" asp-action="Create" asp-route-subjectId="@subjectId" class="btn btn-primary">Tạo câu hỏi mới</a>
    </p>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="ShowQuestions" method="get">
            <input type="hidden" name="id" value="@subjectId" />
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm kiếm câu hỏi..." />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                <a asp-action="ShowQuestions" asp-route-id="@subjectId" class="btn btn-secondary">Xóa bộ lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nội dung câu hỏi</th>
                <th>Độ khó</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(item.QuestionContent.Length > 100 ? item.QuestionContent.Substring(0, 100) + "..." : item.QuestionContent)
                    </td>
                    <td>
                        @item.Difficulty
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Question" asp-action="Details" asp-route-id="@item.QuestionId" class="btn btn-sm btn-info">Chi tiết</a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                            {
                                <a asp-controller="Question" asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-sm btn-primary">Sửa</a>
                                <a asp-controller="Question" asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-sm btn-danger">Xóa</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a asp-action="ShowQuestions"
               asp-route-id="@subjectId"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               class="page-link">
                Trước
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                <a asp-action="ShowQuestions"
                   asp-route-id="@subjectId"
                   asp-route-pageNumber="@i"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   class="page-link">
                    @i
                </a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a asp-action="ShowQuestions"
               asp-route-id="@subjectId"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               class="page-link">
                Tiếp theo
            </a>
        </li>
    </ul>
</nav>

<div class="mt-3">
    <a asp-controller="Subject" asp-action="Details" asp-route-id="@subjectId" class="btn btn-info">Xem chi tiết môn học</a>
    <a asp-controller="Subject" asp-action="Index" class="btn btn-secondary">Quay lại danh sách môn học</a>
</div>