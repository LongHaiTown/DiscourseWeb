@model EduquizSuper.Models.Subject
@{
    ViewData["Title"] = "Tạo môn học mới";
}

<h1>Tạo môn học mới</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="SubjectId" class="control-label">Mã môn học</label>
                <input asp-for="SubjectId" class="form-control" />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SubjectName" class="control-label">Tên môn học</label>
                <input asp-for="SubjectName" class="form-control" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Khóa học</label>
                <select asp-for="CourseId" class="form-control" asp-items="@((SelectList)ViewData["CourseId"])">
                    <option value="">Chọn khóa học</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}