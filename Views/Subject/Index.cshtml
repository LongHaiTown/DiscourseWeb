@model PaginatedList<EduquizSuper.Models.Subject>
@{
    ViewData["Title"] = "Danh sách môn học";
    var courses = ViewData["Courses"] as SelectList;
}

<h1>Danh sách môn học</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo môn học mới</a>
    </p>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm kiếm môn học..." />
                <select name="courseId" class="form-control" asp-items="courses">
                    <option value="">-- Tất cả khóa học --</option>
                </select>
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary">Xóa bộ lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên môn học</th>
                <th>Khóa học</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SubjectName
                    </td>
                    <td>
                        @item.Course?.CourseName
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.SubjectId" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="ShowQuestions" asp-route-id="@item.SubjectId" class="btn btn-sm btn-success">Danh sách câu hỏi</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.SubjectId" class="btn btn-sm btn-primary">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.SubjectId" class="btn btn-sm btn-danger">Xóa</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-courseId="@ViewData["CurrentCourse"]"
               class="page-link">
                Trước
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-courseId="@ViewData["CurrentCourse"]"
                   class="page-link">
                    @i
                </a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-courseId="@ViewData["CurrentCourse"]"
               class="page-link">
                Tiếp theo
            </a>
        </li>
    </ul>
</nav>