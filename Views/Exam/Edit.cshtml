@model EduquizSuper.Models.Exam
@{
    ViewData["Title"] = "Chỉnh sửa bài thi";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExamId" />
                <input type="hidden" asp-for="ManagerId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExamName" class="control-label">Tên bài thi</label>
                            <input asp-for="ExamName" class="form-control" required />
                            <span asp-validation-for="ExamName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SubjectId" class="control-label">Môn học</label>
                            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId" required>
                                <option value="">-- Chọn môn học --</option>
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Duration" class="control-label">Thời gian làm bài (phút)</label>
                            <input asp-for="Duration" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ScorePerQuestion" class="control-label">Điểm mỗi câu</label>
                            <input asp-for="ScorePerQuestion" class="form-control" type="number" step="0.1" min="0.1" required />
                            <span asp-validation-for="ScorePerQuestion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EasyQuestions" class="control-label">Số câu dễ</label>
                            <input asp-for="EasyQuestions" class="form-control question-count" type="number" min="0" required />
                            <span asp-validation-for="EasyQuestions" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MediumQuestions" class="control-label">Số câu trung bình</label>
                            <input asp-for="MediumQuestions" class="form-control question-count" type="number" min="0" required />
                            <span asp-validation-for="MediumQuestions" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="HardQuestions" class="control-label">Số câu khó</label>
                            <input asp-for="HardQuestions" class="form-control question-count" type="number" min="0" required />
                            <span asp-validation-for="HardQuestions" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Tổng số câu hỏi</label>
                            <input id="totalQuestions" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            // Cập nhật tổng số câu hỏi khi thay đổi số lượng
            function updateTotalQuestions() {
                var easy = parseInt($('#EasyQuestions').val()) || 0;
                var medium = parseInt($('#MediumQuestions').val()) || 0;
                var hard = parseInt($('#HardQuestions').val()) || 0;
                var total = easy + medium + hard;
                $('#totalQuestions').val(total);
            }

            $('.question-count').on('input', updateTotalQuestions);
            updateTotalQuestions(); // Cập nhật lần đầu khi tải trang
        });
    </script>
}