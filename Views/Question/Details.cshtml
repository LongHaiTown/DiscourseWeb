@* @model EduquizSuper.Models.Question  *@

@* @{ *@
@*     ViewData["Title"] = "Chi tiết câu hỏi"; *@
@*     var answers = ViewData["Answers"] as List<EduquizSuper.Models.ExamDetail>; *@
@* } *@

@* <h1>Chi tiết câu hỏi</h1> *@

@* <div> *@
@*     <hr /> *@
@*     <dl class="row"> *@
@*         <dt class="col-sm-2"> *@
@*             ID *@
@*         </dt> *@
@*         <dd class="col-sm-10"> *@
@*             @Model.QuestionId *@
@*         </dd> *@
@*         <dt class="col-sm-2"> *@
@*             Nội dung câu hỏi *@
@*         </dt> *@
@*         <dd class="col-sm-10"> *@
@*             @Html.Raw(Model.QuestionContent) *@
@*         </dd> *@
@*         <dt class="col-sm-2"> *@
@*             Môn học *@
@*         </dt> *@
@*         <dd class="col-sm-10"> *@
@*             @Model.Subject?.SubjectName *@
@*         </dd> *@
@*         <dt class="col-sm-2"> *@
@*             Độ khó *@
@*         </dt> *@
@*         <dd class="col-sm-10"> *@
@*             @Model.Difficulty *@
@*         </dd> *@
@*     </dl> *@
@* </div> *@

@* <div class="card mt-3"> *@
@*     <div class="card-header bg-primary text-white"> *@
@*         <h5 class="mb-0">Danh sách câu trả lời</h5> *@
@*     </div> *@
@*     <div class="card-body"> *@
@*         <ul class="list-group"> *@
@*             @if (answers != null) *@
@*             { *@
@*                 @for (int i = 0; i < answers.Count; i++) *@
@*                 { *@
@*                     <li class="list-group-item @(answers[i].IsCorrect ? "list-group-item-success" : "")"> *@
@*                         <div class="d-flex justify-content-between align-items-center"> *@
@*                             <div> *@
@*                                 <span class="badge @(answers[i].IsCorrect ? "bg-success" : "bg-secondary") me-2">@(i + 1)</span> *@
@*                                 @Html.Raw(answers[i].Text) *@
@*                             </div> *@
@*                             @if (answers[i].IsCorrect) *@
@*                             { *@
@*                                 <span class="badge bg-success">Đáp án đúng</span> *@
@*                             } *@
@*                         </div> *@
@*                     </li> *@
@*                 } *@
@*             } *@
@*         </ul> *@
@*     </div> *@
@* </div> *@

@* <div class="mt-3"> *@
