@model PaginatedList<EduquizSuper.Models.Question>

@{
    ViewData["Title"] = "Danh sách câu hỏi";
}

<h1>Danh sách câu hỏi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm câu hỏi mới</a>
    <a asp-action="Import" class="btn btn-info">Import câu hỏi</a>
</p>

<div class="card mb-4">
    <div class="card-header">
        <h5>Bộ lọc</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="subjectId" class="form-label">Môn học</label>
                    <select name="subjectId" id="subjectId" class="form-select" asp-items="ViewBag.SubjectId">
                        <option value="">-- Tất cả môn học --</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="difficultyFilter" class="form-label">Độ khó</label>
                    <select name="difficultyFilter" id="difficultyFilter" class="form-select">
                        <option value="">-- Tất cả độ khó --</option>
                        @foreach (var difficulty in (List<string>)ViewData["DifficultyLevels"])
                        {
                            <option value="@difficulty" selected="@(ViewData["CurrentDifficulty"]?.ToString() == difficulty)">@difficulty</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="searchString" class="form-label">Từ khóa</label>
                    <input type="text" id="searchString" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm nội dung câu hỏi..." />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Lọc</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Xóa bộ lọc</a>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Nội dung câu hỏi</th>
                <th>Môn học</th>
                <th>Độ khó</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.Raw(item.QuestionContent)</td>
                    <td>@item.Subject.SubjectName</td>
                    <td>@item.Difficulty</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-sm btn-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.QuestionId" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-subjectId="@ViewData["CurrentSubject"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-difficultyFilter="@ViewData["CurrentDifficulty"]"
               class="page-link">
                Trước
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-subjectId="@ViewData["CurrentSubject"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-difficultyFilter="@ViewData["CurrentDifficulty"]"
                   class="page-link">
                    @i
                </a>
            </li>
        }
        <li class="page-item @nextDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-subjectId="@ViewData["CurrentSubject"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-difficultyFilter="@ViewData["CurrentDifficulty"]"
               class="page-link">
                Tiếp
            </a>
        </li>
    </ul>
</nav>@*
