@model EduquizSuper.Models.ExamResult
@{
    ViewData["Title"] = "Exam Result";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Exam Result</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="StudentExam" asp-action="Index">Exams</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Result</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Model.Exam.ExamName</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Subject:</strong> @Model.Exam.Subject.SubjectName</p>
                            <p><strong>Date Taken:</strong> @Model.SubmitTime.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Time Spent:</strong> @Model.Duration.ToString(@"hh\:mm\:ss")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Total Questions:</strong> @Model.Exam.NumberOfQuestions</p>
                            <p><strong>Maximum Score:</strong> @Model.Exam.TotalScore</p>
                            <p><strong>Your Score:</strong> @Model.Score.ToString("F2")</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="ReviewResult" asp-route-id="@Model.ExamId" class="btn btn-primary">
                    <i class="bi bi-search"></i> Xem chi tiết kết quả
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Performance Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="progress mb-3" style="height: 30px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @(Model.Score / Model.Exam.TotalScore * 100)%;"
                                     aria-valuenow="@(Model.Score / Model.Exam.TotalScore * 100)"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @((Model.Score / Model.Exam.TotalScore * 100).ToString("F1"))%
                                </div>
                            </div>
                            <div class="answer-stats mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>Câu đúng:</span>
                                    <span class="badge bg-success">@Model.CorrectCount</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>Câu sai:</span>
                                    <span class="badge bg-danger">@Model.IncorrectCount</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Chưa làm:</span>
                                    <span class="badge bg-secondary">@Model.UnansweredCount</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @{
                                string resultText;
                                string resultClass;
                                double percentage = Model.Score / Model.Exam.TotalScore * 100;

                                if (percentage >= 80)
                                {
                                    resultText = "Excellent";
                                    resultClass = "success";
                                }
                                else if (percentage >= 70)
                                {
                                    resultText = "Good";
                                    resultClass = "primary";
                                }
                                else if (percentage >= 60)
                                {
                                    resultText = "Satisfactory";
                                    resultClass = "info";
                                }
                                else if (percentage >= 50)
                                {
                                    resultText = "Pass";
                                    resultClass = "warning";
                                }
                                else
                                {
                                    resultText = "Fail";
                                    resultClass = "danger";
                                }
                            }
                            <h4>Result: <span class="badge badge-@resultClass">@resultText</span></h4>
                        </div>
                    </div>
                </div>
            </div>

            @if (DateTime.Now > Model.Exam.EndTime)
            {
                <div class="mt-4">
                    <a asp-action="Review" asp-route-id="@Model.ExamId" class="btn btn-primary">
                        Review Answers
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    <i class="fas fa-info-circle"></i> You can review your answers after the exam closes for all students.
                    <p>Exam closes on: @Model.Exam.EndTime.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Grade Scale</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Excellent
                            <span class="badge badge-success badge-pill">80-100%</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Good
                            <span class="badge badge-primary badge-pill">70-79%</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Satisfactory
                            <span class="badge badge-info badge-pill">60-69%</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Pass
                            <span class="badge badge-warning badge-pill">50-59%</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Fail
                            <span class="badge badge-danger badge-pill">0-49%</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Next Steps</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a asp-controller="StudentExam" asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-list mr-2"></i> View all exams
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-book mr-2"></i> Study materials
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-question-circle mr-2"></i> Get help
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>