@model DisCourse.Models.Comment
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <div class="mt-4">
        <form asp-controller="Comment" asp-action="Create" method="post" id="comment-form">
            <input type="hidden" asp-for="PostId" />

            <div class="mb-4">
                <label for="Content" class="block text-sm font-medium text-gray-700 mb-1">Viết bình luận của bạn</label>
                <input asp-for="Content" id="comment-editor" rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                          placeholder="Nhập nội dung bình luận..."></input>
                <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                    Gửi bình luận
                </button>
            </div>
        </form>
    </div>

   
}
else
{
    <div class="bg-gray-50 p-4 rounded-lg mt-4 text-center">
        <p class="mb-3">Đăng nhập để bình luận</p>
        <a asp-controller="Account" asp-action="Login"
           asp-route-returnUrl="@Context.Request.Path"
           class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 inline-block">
            Đăng nhập
        </a>
    </div>
}