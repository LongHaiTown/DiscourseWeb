@model IEnumerable<DisCourse.Models.Comment>

@if (Model != null && Model.Any())
{
    <div class="space-y-4 mb-6">
        @foreach (var comment in Model)
        {
            <div class="bg-gray-50 rounded-lg p-4">
                <div class="flex items-center mb-2">
                    <img src= "/images/placeholder-user.jpg"
                         alt="@(comment.Author.UserName )"
                         class="w-8 h-8 rounded-full mr-2">
                    <div>
                        <div class="font-medium">@(comment.Author.UserName)</div>
                        <div class="text-xs text-gray-500">@comment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
                <div class="text-gray-700 pl-10">
                    @comment.Content
                </div>

                @* @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == comment.AuthorId) *@
                @* { *@
                @*     <div class="flex justify-end mt-2 space-x-2"> *@
                @*         <button type="button" onclick="editComment(@comment.Id)" *@
                @*                 class="text-xs text-blue-600 hover:underline"> *@
                @*             Chỉnh sửa *@
                @*         </button> *@
                @*         <button type="button" onclick="deleteComment(@comment.Id)" *@
                @*                 class="text-xs text-red-600 hover:underline"> *@
                @*             Xóa *@
                @*         </button> *@
                @*     </div> *@
                @* } *@
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-6 text-gray-500">
        <p>Chưa có bình luận nào.</p>
    </div>
}
