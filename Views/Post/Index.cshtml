@model IEnumerable<DisCourse.Models.Post>

@{
    ViewData["Title"] = "Tất cả bài viết";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Vietcetera Style</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-weight: bold;
        }

        .card-text {
            color: #6c757d;
        }

        .btn-primary {
            background-color: #000;
            border-color: #000;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <div class="text-center my-4">
            <a asp-action="Create" class="btn btn-primary">Tạo bài viết mới</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@(string.IsNullOrEmpty(item.Thumbnail) ? "/images/default-gateway.jpg" : item.Thumbnail)"
                             class="card-img-top"
                             alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Content.Substring(0, Math.Min(item.Content.Length, 100))...</p>
                            <p class="card-text"><small class="text-muted">Tác giả: @item.Author | @item.CreatedAt.ToString("dd/MM/yyyy")</small></p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Xem chi tiết</a>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Xóa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>