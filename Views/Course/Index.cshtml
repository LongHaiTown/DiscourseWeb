// Views/Courses/Index.cshtml - Course listing page
@model List<Course>

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold mb-4">Courses</h1>
        <p class="text-lg text-gray-600">Enroll in courses to access exclusive content</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var course in Model.Take(5))
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                <img src="@course.Thumbnail" alt="@course.Name" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h2 class="text-xl font-semibold mb-2">@course.Name</h2>
                    <p class="text-gray-600 mb-4">@course.Description</p>
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center">
                            @* <img src="@course.Owner" alt="@course.InstructorName" class="w-8 h-8 rounded-full mr-2"> *@
                            @* <span class="text-sm">@course.Owner.UserName</span> *@
                        </div>
                        @* <span class="text-sm text-gray-500">@course.ArticleCount articles</span> *@
                    </div>
                    <div class="flex justify-between items-center">
                        @* <span class="text-sm font-medium">@course.EnrollmentCount students</span> *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"
                               class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                View Course
                            </a>
                            @* @if (course.IsEnrolled) *@
                            @* { *@
                            @*     <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" *@
                            @*        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"> *@
                            @*         View Course *@
                            @*     </a> *@
                            @* } *@
                            @* else *@
                            @* { *@
                            @*     <form asp-controller="Courses" asp-action="Enroll" method="post"> *@
                            @*         <input type="hidden" name="courseId" value="@course.Id" /> *@
                            @*         <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"> *@
                            @*             Enroll *@
                            @*         </button> *@
                            @*     </form> *@
                            @* } *@
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Index", "Courses")"
                               class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">
                                Sign in to Enroll
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>