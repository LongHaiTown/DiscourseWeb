@model CourseDetailViewModel
@using System.Security.Claims

@{
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier); // Lấy ID của user đang đăng nhập
}

<h1>@Model.Course.Name</h1>
<p>@Model.Course.Description</p>
<p><strong>Chủ khóa học:</strong> @Model.Course.Owner.UserName</p>

<!-- Nút tạo bài viết -->
<a asp-controller="Post" asp-action="Create" asp-route-courseId="@Model.Course.Id" class="btn btn-primary">Tạo bài viết mới</a>

<h2>Bài viết phù hợp với khóa học</h2>
<ul>
    @foreach (var post in Model.Posts.Where(p => p.AuthorId == Model.Course.OwnerID))
    {
        <li>
            <h3>@post.Title</h3>
            <p>@post.Content</p>
            <p><strong>Tác giả:</strong> @post.Author.UserName</p>
            @if (currentUserId == Model.Course.Owner.Id)
            {
                <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">Sửa</a>
                <form asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            }
        </li>
    }
</ul>

<h2>Bài viết khác</h2>
<ul>
    @foreach (var post in Model.Posts.Where(p => p.AuthorId != Model.Course.OwnerID))
    {
        <li>
            <h3>@post.Title</h3>
            <p>@post.Content</p>
            <p><strong>Tác giả:</strong> @post.Author.UserName</p>
            @if (currentUserId == Model.Course.Owner.Id)
            {
                <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">Sửa</a>
                <form asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            }
        </li>
    }
</ul>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
<a asp-action="Edit" asp-route-id="@Model.Course.Id" class="btn btn-warning">Sửa khóa học</a>
