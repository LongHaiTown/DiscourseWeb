@model EduquizSuper.Models.Course
@{
    ViewData["Title"] = "Xóa khóa học";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa khóa học</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash"></i> Xác nhận xóa khóa học
        </div>
        <div class="card-body">
            <h3>Bạn có chắc chắn muốn xóa khóa học này?</h3>
            <dl class="row">
                <dt class="col-sm-3">Tên khóa học</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseName)</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CourseId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>