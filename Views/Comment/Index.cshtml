@model IEnumerable<DisCourse.Models.Comment>
@{
    ViewData["Title"] = "Bình luận bài viết";
    var post = ViewBag.Post as DisCourse.Models.Post;
}

<h2>Bình luận cho: @post?.Title</h2>

<a asp-controller="Post" asp-action="Details" asp-route-id="@post?.Id" class="btn btn-secondary">
    ⬅ Quay lại bài viết
</a>

<hr />

<!-- Form thêm bình luận -->
<partial name="_CommentForm" model="@post?.Id" />

<!-- Danh sách bình luận -->
<partial name="_CommentList" model="Model" />
