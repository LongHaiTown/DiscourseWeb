@model DisCourse.Models.Course

@{
    ViewData["Title"] = "Chỉnh sửa khóa học";
}

<h2>Chỉnh sửa khóa học</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh đại diện khóa học</label>
        @if (!string.IsNullOrEmpty(Model.Thumbnail))
        {
            <div class="mb-2">
                <img src="@Model.Thumbnail" alt="Thumbnail" class="img-fluid rounded shadow-sm" style="max-width: 200px;">
            </div>
        }
        <input type="file" name="ThumbnailFile" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
